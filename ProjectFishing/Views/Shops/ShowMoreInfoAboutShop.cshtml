    <div class="container">
        <!-- Row -->
        <div class="row">
            <!-- Content Area -->
            <div class="content-area content-area75 blogpost col-md-9 col-sm-8">
                <article class="type-post blog-onecolumn format-image">
                    <div class="entry-cover ">
                        <div>
                            <div class="photo-slider container-fluid no-padding">
                                <!-- Main Carousel -->
                                <div id="main-carousel" class="carousel slide carousel-fade col-offset-2">
                                    <div class="carousel-inner" role="listbox">
                                        <div class="item active">
                                            <div class="slider-image">
                                                <img style="height:500px" src="~/images/ForViews/Shops/{{ShopModel.Images[0].Name}}" alt="slider-1">
                                            </div>
                                        </div>
                                        <div class="item" ng-if="ShopModel.Images[1]!=null">
                                            <div class="slider-image">
                                                <img style="height:500px" src="~/images/ForViews/Shops/{{ShopModel.Images[1].Name}}" alt="slider-1">
                                            </div>
                                        </div>
                                        <div class="item " ng-if="ShopModel.Images[2]!=null">
                                            <div class="slider-image">
                                                <img style="height:500px" src="~/images/ForViews/Shops/{{ShopModel.Images[2].Name}}" alt="slider-1">
                                            </div>
                                        </div>
                                        <a class="left carousel-control" href="#main-carousel" role="button" data-slide="prev">
                                            <i class="fa fa-angle-left"></i>
                                            <span class="sr-only">Previous</span>
                                        </a>
                                        <a class="right carousel-control" href="#main-carousel" role="button" data-slide="next">
                                            <i class="fa fa-angle-right"></i>
                                            <span class="sr-only">Next</span>
                                        </a>
                                    </div><!-- Main Carousel /-  -->
                                </div><!-- Photo Slider /- -->

                            </div>


                            <div class="entry-meta">
                                <div class="post-date">
                                    <p><span>{{ShopModel.Post.Name}}</span></p>
                                </div>

                            </div>
                        </div>
                    </div>
                    <div class="entry-title">
                        <h3>Описание: {{ShopModel.Post.Description}}</h3>
                    </div>
                    <div class="entry-content">
                        <p>Рейтинг: {{ShopModel.Post.Rating}}</p>
                        <p>Часы работы: {{ShopModel.Post.WorkingHours}}</p>
                        <p>Телефон: {{ShopModel.Post.Phone}}</p>



                    </div>
                </article>



            </div><!-- Content Area /- -->
