
<head>
    <script>
        var idViewBag = @ViewBag.IdShop;
        var mainApp = angular.module("mainApp", []);
        mainApp.controller("mainController", function ($scope, $http) {
            $scope.ShopModel;
            $scope.IdShop = idViewBag;
            $http({
                method: 'GET',
                url: '/Shops/GetShopById/'+$scope.IdShop,

            })
                .then(function succes(responce) {
                    $scope.ShopModel = responce.data;
                     console.log($scope.ShopModel);
                });
        });
    </script>
</head>
<body data-offset="200" data-spy="scroll" data-target=".ow-navigation" ng-controller="mainController">
